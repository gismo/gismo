<?xml version="1.0" encoding="UTF-8" ?>
<precice-configuration>
  <log>
    <sink
      filter="%Severity% > debug and %Rank% = 0"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="true" />

    <sink type="file" output="debug.log" filter="%Severity% > trace" enabled="true" />
  </log>

  <data:scalar name="SolverOneData" />
  <data:scalar name="SolverTwoData" />

  <mesh name="SolverOneMesh" dimensions="2">
    <use-data name="SolverOneData" />
    <use-data name="SolverTwoData" />
  </mesh>

  <mesh name="SolverTwoMesh" dimensions="2">
    <use-data name="SolverOneData" />
    <use-data name="SolverTwoData" />
  </mesh>

  <participant name="SolverTwo">
    <provide-mesh name="SolverTwoMesh"/>
    <receive-mesh name="SolverOneMesh" from="SolverOne" direct-access="true"/>
    <write-data name="SolverOneData" mesh="SolverOneMesh" />
    <read-data name="SolverTwoData" mesh="SolverTwoMesh" />
  </participant>

  <participant name="SolverOne">
    <provide-mesh name="SolverOneMesh"/>
    <receive-mesh name="SolverTwoMesh" from="SolverTwo" direct-access="true"/>
    <write-data name="SolverTwoData" mesh="SolverTwoMesh" />
    <read-data name="SolverOneData" mesh="SolverOneMesh" />
  </participant>

  <m2n:sockets acceptor="SolverOne" connector="SolverTwo" exchange-directory=".." />

  <coupling-scheme:serial-explicit>
    <participants first="SolverTwo" second="SolverOne" />
    <max-time value="1.0" />
    <time-window-size value="0.1" />
    <exchange data="SolverOneData" mesh="SolverOneMesh" from="SolverTwo" to="SolverOne" />
    <exchange data="SolverTwoData" mesh="SolverTwoMesh" from="SolverOne" to="SolverTwo" />
  </coupling-scheme:serial-explicit>

